pkgdesc="sendmail connector"
arch=('i686' 'x86_64')
url="http://github.com/wiemag/sm-c"
license=('GPL')
groups=()
depends=('bash' 'coreutils' 'procps-ng' 'grep' 'which' 'msmtp')
